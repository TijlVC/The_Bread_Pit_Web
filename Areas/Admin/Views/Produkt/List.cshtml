@model ProduktenLijst
@{
    ViewBag.Title = "Admin Produkt lijst";
}

<h1>Alle Producten Admin</h1>
<div class="row">
    <div class="col-sm-2">
        <div class="list-group">
            <a asp-controller="Produkt" asp-action="List" asp-route-id="Alles" class="list-group-item
            @Model.ActiveCategory("All")">Alles</a>
            @foreach (Categorie categorie in Model.Categorien)
            {
                <a asp-controller="Produkt" asp-action="List" asp-route-id="@categorie.CategoryID"
                   class="list-group-item">@categorie.CategorieNaam</a>
            }
        </div>
    </div>
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>Omschrijving</th>
                    <th class="text-center">Prijs</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produkt in Model.Produkten)
                {
                    <tr>
                        <td>@produkt.ProduktNaam</td>
                        <td>@produkt.Omschrijving</td>
                        <td class="text-center">@produkt.Prijs.ToString("c")</td>
                        <td class="text-center">
                            <a asp-controller="Produkt" asp-action="Edit" asp-route-id="@produkt.ProductID" class="btn btn-warning">
                                Gegevens aanpassen <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-controller="Produkt" asp-action="Delete" asp-route-id="@produkt.ProductID" class="btn btn-danger">
                                Verwijderen <i class="fas fa-trash-alt" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Produkt" asp-action="Add" class="btn btn-primary">Voeg produkt toe</a>
    </div>
</div>
</br>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Terug</a>