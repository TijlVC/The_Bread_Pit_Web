@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "DefaultController";
    string action = ViewContext.RouteData.Values["action"]?.ToString() ?? "DefaultAction";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <span class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Bread Pit</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link
                               @(controller == "Home" && action == "Index" ? "active" : "")" asp-area="Admin"
                           asp-controller="Home" asp-action="Index">Admin Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link
                               @(controller == "Produkt" ? "active" : "")" asp-area="Admin"
                           asp-controller="Produkt" asp-action="List">Produkten Beheer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link
                               @(controller == "BestellingOverzicht" ? "active" : "")" asp-area="Admin"
                           asp-controller="BestellingOverzicht" asp-action="OverzichtBestellingen">Bestellingen Beheer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link
                               @(controller == "AccountManegement" ? "active" : "")" asp-area="Admin"
                           asp-controller="AccountManagement" asp-action="Personeel">Personeel Beheer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link
                               @(controller == "AccountManegement" ? "active" : "")" asp-area="Admin"
                           asp-controller="AccountManagement" asp-action="Klanten">Klant Beheer</a>
                    </li>
                    <li class="nav-item ms-auto">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
</div>