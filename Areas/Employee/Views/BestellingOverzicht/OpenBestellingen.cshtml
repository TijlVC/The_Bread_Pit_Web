@model TheBreadPit.Areas.Employee.Models.BestellingOverzichtViewModel

<h2>Open Bestellingen</h2>

<table class="table">
    <thead>
        <tr>
            <th>Produktnaam</th>
            <th>Aantal</th>
            <th>Prijs per Stuk</th>
            <th>Subtotaal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Producten)
        {
            <tr>
                <td>@product.ProduktNaam</td>
                <td>@product.Aantal</td>
                <td>@product.PrijsPerStuk.ToString("C")</td>
                <td>@product.Subtotaal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Totale Prijs van Alle Bestellingen: @Model.TotalePrijs.ToString("C")</h3>
