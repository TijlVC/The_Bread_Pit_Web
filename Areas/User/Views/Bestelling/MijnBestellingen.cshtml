@model List<The_Bread_Pit.Areas.User.Models.BestellingViewModel>


<h2>Al mijn bestellingen</h2>

<form method="get">
    <select name="filter" onchange="this.form.submit()">
        <option value="">Alle</option>
        <option value="betaald">Betaald</option>
        <option value="geannuleerd">Geannuleerd</option>
        <option value="afgerond">Afgerond</option>
    </select>
</form>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Bestelling ID</th>
                <th>Status</th>
                <th>Besteldatum</th>
                <th>Totaal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bestelling in Model)
            {
                <tr>
                    <td>@bestelling.BestellingId</td>
                    <td>@(bestelling.IsGeannuleerd ? "Geannuleerd" : bestelling.IsBetaald ? "Betaald" : "Open")</td>
                    <td>@bestelling.BestelDatum.ToString("dd-MM-yyyy")</td>
                    <td>@bestelling.Totaal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Geen bestellingen gevonden.</p>
}